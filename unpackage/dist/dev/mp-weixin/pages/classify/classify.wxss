.classify{
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	height: 100%;
}
.sidebar-left{
	width: 160rpx;
	height: 100vh;
	position: fixed;
}
.sidebar-right{
	width: 590rpx;
	background: #fbfbfd;
	margin-left: 160rpx;
	min-height: 100vh;
}
.sidebar-right-group{
	margin-left: 20rpx;
	background:white;
	margin-bottom: 20rpx;
}
.sidebar-right-group .group-title{
	font-size: 26rpx;
	font-weight: bold;
	letter-spacing: 2rpx;
	padding: 10rpx 0 0 20rpx;
}
.group-list{
	width: 100%;
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-flex-wrap: wrap;
	        flex-wrap: wrap;
}
.group-list-image{
	width: 70%;
	height: 100rpx;
}
.group-box{
	width: 30%;
	height: 150rpx;
	margin: 10rpx 1.6%;
	text-align: center;
	font-size: 24rpx;
	font-weight: bold;
}
